
<%= link_to('<< Back to List', pages_path, :class => 'back-link') %>

<div class='pages delete'>
	<h2>Delete A page</h2>

	<%= form_for(@page, :url => page_path(@page), :method => 'delete') do |f| %>

		<h3>Are you sure you want to delete this <%= f.object.name %> page?</h3>

		<table summary="page form fields">
			<tr>
				<th>Name</th>
				<td><%= @page.name %></td>
			</tr>
			<tr>
				<th>Permalink</th>
				<td><%= @page.permalink %></td>
			<tr>
				<th>Position</th>
				<td><%= @page.position %></td>
			</tr>
			<tr>
				<th>Visible</th>
				<td><%= @page.visible %></td>
			</tr>
		</table>

		<div class='form-buttons'>
			<%= f.submit('Delete page') %>
		</div>
	<% end %>
</div>












