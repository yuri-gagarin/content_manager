<% if !flash.empty? %>
	<div>
		<p><%= flash[:notice] %></p>
	</br>
		<p><%= @page.errors.full_messages %></div>
	</div>
<% end %>

<%= link_to('<< Back to List', pages_path, :class => 'back-link') %>

<div class='pages new'>
	<h2>Create pages</h2>

	<%= form_for(@page, :url => pages_path, :method => 'post') do |f| %>

		<table summary="page form fields">
			<tr>
				<th>Name</th>
				<td><%= f.text_field(:name) %></td>
			</tr>
			<tr>
				<th>Permalink</th>
				<td><%= f.text_field(:permalink) %></td>
			</tr>
			<tr>
				<th>Position</th>
				<td><%= f.text_field(:position) %></td>
			</tr>			
			<tr>
				<th>Visible</th>
				<td><%= f.text_field(:visible) %></td>
			</tr>
		</table>

		<div class='form-buttons'>
			<%= f.submit('Create page') %>
		</div>
	<% end %>
</div>












