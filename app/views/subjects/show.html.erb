<% if !flash.empty? %>
<div class='notice'>
	<p><%= flash[:notice] %></p>
</div>
<% end %>

<%= link_to('Back to List', subjects_path, :class => 'back-link') %>

<div class='subjects show'>
	<h2>Show Subject</h2>

	<table summary='Subject detail view'>
		<tr>
			<th>Name</th>
			<td><%= @subject.name %>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= @subject.visible ? 'Yes' : 'No' %></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @subject.created_at %></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @subject.updated_at %></td>
		</tr>
	</table>
</div>