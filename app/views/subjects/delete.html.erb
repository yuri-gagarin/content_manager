
<%= link_to('<< Back to List', subjects_path, :class => 'back-link') %>

<div class='subjects delete'>
	<h2>Delete A Subject</h2>

	<%= form_for(@subject, :url => subject_path(@subject), :method => 'delete') do |f| %>

		<h3>Are you sure you want to delete this <%= f.object.name %> Subject?</h3>

		<table summary="Subject form fields">
			<tr>
				<th>Name</th>
				<td><%= @subject.name %></td>
			</tr>
			<tr>
				<th>Position</th>
				<td><%= @subject.position %></td>
			</tr>
			<tr>
				<th>Visible</th>
				<td><%= @subject.visible %></td>
			</tr>
		</table>

		<div class='form-buttons'>
			<%= f.submit('Delete Subject') %>
		</div>
	<% end %>
</div>












