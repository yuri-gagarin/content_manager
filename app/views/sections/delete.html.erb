
<%= link_to('<< Back to List', sections_path, :class => 'back-link') %>

<div class='sections delete'>
	<h2>Delete A section</h2>

	<%= form_for(@section, :url => section_path(@section), :method => 'delete') do |f| %>

		<h3>Are you sure you want to delete this <%= f.object.name %> section?</h3>

		<table summary="section form fields">
			<tr>
				<th>Name</th>
				<td><%= @section.name %></td>
			</tr>
			<tr>
				<th>Position</th>
				<td><%= @section.position %></td>
			<tr>
				<th>Visible</th>
				<td><%= @section.visible %></td>
			</tr>
			<tr>
				<th>Content Type</th>
				<td><%= @section.content_type %></td>
			</tr>
			<tr>
				<th>Content</th>
				<td><%= @section.content %></td>
			</tr>
		</table>

		<div class='form-buttons'>
			<%= f.submit('Delete section') %>
		</div>
	<% end %>
</div>












